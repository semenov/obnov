%p#notice= notice
%h1
  = @stream.name
= link_to 'Редактировать', edit_stream_path(@stream)
|
= link_to 'Все потоки', streams_path

= form_for([@stream, @post]) do |f|
  .field
    = f.text_field :status
  .actions
    = f.submit


#updates
  - @stream.posts.activity.each do |post|
    .post
      = link_to '#', [@stream, post]
      = post.status
      %small
        = time_ago_in_words(post.created_at)
